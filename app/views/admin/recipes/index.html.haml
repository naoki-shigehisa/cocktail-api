.p-12
  = paginate @recipes
  %table.table-auto
    %thead
      %tr
        %th.px-4.py-2 Name
        %th.px-4.py-2 Name (English)
        %th.px-4.py-2 Thumbnail
        %th.px-4.py-2
    %tbody
      - @recipes.each do |recipe|
        %tr
          %td.border.px-4.py-2
            = recipe.name
          %td.border.px-4.py-2
            = recipe.name_en
          %td.border.px-4.py-2
            = image_tag recipe.thumbnail_url, size: "50x60", alt: recipe.name
          %td.border.px-4.py-2
            = link_to 'Show', admin_recipe_path(recipe), class: 'btn btn-primary'
            = link_to 'Edit', edit_admin_recipe_path(recipe), class: 'btn btn-primary'
