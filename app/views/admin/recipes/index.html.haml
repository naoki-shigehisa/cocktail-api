.container.mx-auto.p-6
  .bg-white.shadow-md.rounded-lg.overflow-hidden
    .p-6
      .flex.justify-between.items-center.mb-4
        %h1.text-2xl.font-bold レシピ一覧
        = paginate @recipes, class: 'text-sm'

      .overflow-x-auto
        %table.min-w-full.divide-y.divide-gray-200
          %thead.bg-gray-50
            %tr
              %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider 名前
              %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider 名前 (英語)
              %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider サムネイル
              %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider アクション

          %tbody.bg-white.divide-y.divide-gray-200
            - @recipes.each do |recipe|
              %tr
                %td.px-6.py-4.whitespace-nowrap
                  .text-sm.font-medium.text-gray-900= recipe.name
                %td.px-6.py-4.whitespace-nowrap
                  .text-sm.text-gray-500= recipe.name_en
                %td.px-6.py-4.whitespace-nowrap
                  = image_tag recipe.thumbnail_url, class: 'h-12 w-12 rounded-full object-cover', alt: recipe.name
                %td.px-6.py-4.whitespace-nowrap.text-sm.font-medium
                  = link_to admin_recipe_path(recipe), class: 'text-indigo-600 hover:text-indigo-900 mr-3' do
                    %i.fas.fa-eye.mr-1
                    表示
                  = link_to edit_admin_recipe_path(recipe), class: 'text-indigo-600 hover:text-indigo-900' do
                    %i.fas.fa-edit.mr-1
                    編集
