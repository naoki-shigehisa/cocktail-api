.p-12
  = paginate @recipes
  .overflow-x-auto
    %table.table-auto.w-full.border-collapse
      %thead.bg-gray-200.sticky.top-0
        %tr
          %th.px-4.py-2.text-left Name
          %th.px-4.py-2.text-left Name (English)
          %th.px-4.py-2.text-left Thumbnail
          %th.px-4.py-2.text-left Actions
      %tbody
        - @recipes.each do |recipe|
          %tr.bg-white.even:bg-gray-100
            %td.border.px-4.py-2
              = recipe.name
            %td.border.px-4.py-2
              = recipe.name_en
            %td.border.px-4.py-2
              = image_tag recipe.thumbnail_url, size: "50x60", alt: recipe.name
            %td.border.px-4.py-2
              = link_to admin_recipe_path(recipe), class: 'btn btn-primary mr-2' do
                %i.fa.fa-eye
                Show
              = link_to edit_admin_recipe_path(recipe), class: 'btn btn-primary' do
                %i.fa.fa-edit
                Edit